{
  "private": true,
  "name": "wasm-playground",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "wasm:build": "asc wasm/playground.ts -b wasm/dist/playground.untouched.wasm -t wasm/dist/playground.untouched.wast --validate"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "unfetch": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0"
  }
}
